---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
const portfolio = await getCollection('portfolio');
---
<BaseLayout title="Portfolio | 7risten.ca">
  <Fragment slot="header">
    <Header />
  </Fragment>
  <main class="max-w-3xl mx-auto py-12">
    <h1 class="text-3xl font-bold mb-6">Portfolio</h1>
    <ul class="space-y-8">
      {portfolio.map(item => (
        <li key={item.slug} class="border-b pb-4">
          <a href={`/portfolio/${item.slug}/`} class="text-2xl font-semibold hover:underline">{item.data.title}</a> - <span class="text-gray-500">{item.data.date}</span>
          <p class="mt-2">{item.data.summary}</p>
        </li>
      ))}
    </ul>
  </main>
  <Fragment slot="footer">
    <Footer />
  </Fragment>
</BaseLayout>
